<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBenefitBackground">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/lrlName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBenefit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="POLO MARINO"
            android:textColor="@color/colorText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtChapita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/cintillo_disccount"
                android:gravity="center"
                android:text="25%" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txtPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lrlName"
        android:layout_marginLeft="10dp"
        android:text=".........................................."
        android:textColor="@color/colorText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPoints"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/likeImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/txtPoints"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/favorite_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPoints"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/likeImage"
            android:text="@string/favoritos"
            android:textColor="@color/colorText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp">

            <ImageView
                android:id="@+id/comollegarImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/txtComollegar"
                android:layout_toStartOf="@+id/txtComollegar"
                android:src="@drawable/map_icon" />

            <TextView
                android:id="@+id/txtComollegar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="CÃ³mo llegar"
                android:textColor="@color/colorText" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>